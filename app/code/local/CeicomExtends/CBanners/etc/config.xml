<config>
    <modules>
        <CeicomExtends_CBanners>
            <version>0.1.0</version>
        </CeicomExtends_CBanners>
    </modules>
    <global>
        <helpers>
            <cbanners>
                <class>CeicomExtends_CBanners_Helper</class>
            </cbanners>
        </helpers>
        <models>
            <cbanners>
                <class>CeicomExtends_CBanners_Model</class>
            </cbanners>
        </models>
        <blocks>
            <ibanners>
                <rewrite>
                    <adminhtml_banner_edit>CeicomExtends_CBanners_Block_Adminhtml_Banner_Edit</adminhtml_banner_edit>
                    <adminhtml_banner_edit_tab_form>CeicomExtends_CBanners_Block_Adminhtml_Banner_Edit_Tab_Form</adminhtml_banner_edit_tab_form>
                </rewrite>
            </ibanners>
            <cbanners>
                <class>CeicomExtends_CBanners_Block</class>
            </cbanners>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <arena>
                    <file>ceicomextends/cbanners.xml</file>
                    <!-- path to your layout file -->
                </arena>
            </updates>
        </layout>
    </frontend>
